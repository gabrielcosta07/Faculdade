{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: gcc.exe build active file",
            "type": "shell",
            "command": "mkdir -p ${workspaceFolder}/bin && C:\\Program Files\\CodeBlocks\\MinGW\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compila o arquivo C atual"
        },
        {
            "label": "Executar arquivo compilado",
            "type": "shell",
            "command": "${workspaceFolder}/bin/${fileBasenameNoExtension}.exe",
            "dependsOn": "C/C++: gcc.exe build active file",
            "group": "test",
            "problemMatcher": []
        }
    ]
}
